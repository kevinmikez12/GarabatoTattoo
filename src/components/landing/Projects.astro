---
import {projects} from '../../config/Projects.json';
---
<h1 class="text-bold text-3xl my-5">Projects</h1>

{
    projects.map(project => [
        <div class="flex text-center md:text-left">
            <div class="flex-1 ">
                <h2 class="text-bold text-2xl my-4">{project.title}</h2>
                <p class="my-4">{project.descripcion}</p>
                <button class="bg-indigo-800 px-3 py-2 hover:bg-amber-300">More info</button>
            </div>
            <div class="flex-1">
                <img src={project.image} alt="" class="w-72 h-30">
            </div>
        </div>
    ])
}